{
  "name": "tab-extensions",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "yarn run chromium:build && yarn run firefox:build",
    "chromium:build": "yarn test ./chromium/ && node ./scripts/build-chromium.js",
    "chromium:develop": "nodemon --watch ./src/chromium --exec \"yarn run chromium:build\"",
    "firefox:build": "yarn test ./firefox/ && yarn run firefox:make-intermediate-builds && yarn run firefox:make-final-builds",
    "firefox:make-intermediate-builds": "yarn run firefox:make-manifests && ./scripts/make-intermediate-firefox-builds.sh",
    "firefox:make-manifests": "mkdir -p ./src/firefox/tmp && yarn run firefox:make-manifest:self-hosted && yarn run firefox:make-manifest:addon-store",
    "firefox:make-manifest:self-hosted": "cd ./src/firefox/ && cat manifest.json manifest.self-hosted-overrides.json | json --deep-merge > ./tmp/manifest.self-hosted.json",
    "firefox:make-manifest:addon-store": "cd ./src/firefox/ && cat manifest.json manifest.addon-store-overrides.json | json --deep-merge > ./tmp/manifest.addon-store.json",
    "firefox:make-final-builds": "web-ext build --source-dir=./intermediate-builds/firefox/addon-store -a ./build/firefox/addon-store --overwrite-dest && web-ext build --source-dir=./intermediate-builds/firefox/self-hosted -a ./build/firefox/self-hosted --overwrite-dest",
    "firefox:lint": "web-ext lint --source-dir=./src/firefox",
    "firefox:run": "web-ext run --source-dir=./src/firefox"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gladly-team/tab-extensions.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gladly-team/tab-extensions/issues"
  },
  "jest": {
    "rootDir": "./src"
  },
  "homepage": "https://github.com/gladly-team/tab-extensions#readme",
  "devDependencies": {
    "archiver": "^1.3.0",
    "fs-extra": "^2.1.1",
    "jest": "^19.0.2",
    "json": "^9.0.6",
    "nodemon": "^1.11.0",
    "web-ext": "^2.0.0"
  }
}
