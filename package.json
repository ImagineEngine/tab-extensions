{
  "name": "tab-extensions",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "yarn run lint && jest",
    "build": "yarn run chromium:build && yarn run firefox:build",
    "chromium:build": "yarn test ./chromium/ && NODE_ENV=production node ./scripts/build-chromium.js",
    "chromium:develop": "nodemon --watch ./src/chromium --exec \"yarn run chromium:build\"",
    "firefox:build": "yarn test ./firefox/ && NODE_ENV=production node ./scripts/build-firefox.js",
    "firefox:lint": "web-ext lint --source-dir=./src/firefox",
    "firefox:run": "web-ext run --source-dir=./ src/firefox",
    "shared:build": "NODE_ENV=production node ./scripts/build-shared.js",
    "lint": "standard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gladly-team/tab-extensions.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gladly-team/tab-extensions/issues"
  },
  "jest": {
    "rootDir": "./src"
  },
  "homepage": "https://github.com/gladly-team/tab-extensions#readme",
  "devDependencies": {
    "archiver": "^1.3.0",
    "fs-extra": "^2.1.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^19.0.2",
    "json": "^9.0.6",
    "nodemon": "^1.11.0",
    "standard": "^10.0.3",
    "web-ext": "^2.0.0",
    "webpack": "^3.6.0"
  }
}
