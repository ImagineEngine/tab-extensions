    "rootDir": "./src"
  },
  "homepage": "https://github.com/gladly-team/tab-extensions#readme",
  "devDependencies": {
    "archiver": "^1.3.0",
    "fs-extra": "^2.1.1",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0",
    "web-ext": "^2.0.0"
  }
}
